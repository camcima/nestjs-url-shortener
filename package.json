{
  "name": "nestjs-url-shortener",
  "type": "module",
  "version": "0.0.0-development.0",
  "private": true,
  "description": "A simple url shortening API built on NestJS, using modern best practices",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "// =============================================================== //": "",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "build": "tsc --project tsconfig.build.json",
    "// ============================= apps ============================= //": "",
    "rest/start:prod": "node --env-file-if-exists=.env ./dist/apps/rest-api/rest-api.main.js",
    "rest/start:dev": "nest start --watch --exec 'node --env-file=.env.local' --entryFile apps/rest-api/rest-api.main",
    "// ============================ test ============================ //": "",
    "test": "vitest --config ./test/vitest.config.ts run",
    "watch/test": "vitest --config ./test/vitest.config.ts watch",
    "watch-cov": "vitest --config ./test/vitest.config.ts watch --ui --coverage",
    "test:generate-cov": "vitest run --config ./test/vitest.config.ts --coverage",
    "// ============================ sytle ============================ //": "",
    "lint": "biome check --write",
    "lint:check": "biome lint",
    "format": "biome check --formatter-enabled=true --enforce-assist true --write",
    "format:check": "biome check --formatter-enabled=true --enforce-assist true",
    "// ============================== db ============================== //": "",
    "db:init": "dbmate up",
    "db:reset": "dbmate drop && dbmate up",
    "migrate": "DBMATE_MIGRATIONS_TABLE=schema_migrations dbmate --env-file .env.local up",
    "migrate:new": "DBMATE_MIGRATIONS_TABLE=schema_migrations dbmate --env-file .env.local new",
    "migrate:status": "DBMATE_MIGRATIONS_TABLE=schemax_migrations dbmate --env-file .env.local status@vitest/coverage-v8",
    "migrate:rollback": "DBMATE_MIGRATIONS_TABLE=schema_migrations dbmate --env-file .env.local down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camcima/nestjs-url-shortener.git"
  },
  "keywords": [],
  "author": "Micael Levi L. C.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/camcima/nestjs-url-shortener/issues"
  },
  "homepage": "https://github.com/camcima/nestjs-url-shortener#readme",
  "dependencies": {
    "@nestjs-cls/transactional-adapter-drizzle-orm": "^1.2.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.1",
    "@opentelemetry/context-async-hooks": "^2.0.1",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/exporter-prometheus": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-pino": "^0.50.1",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "^0.44.4",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "nest-problem-details-filter": "^1.0.0",
    "nestjs-cls": "^6.0.1",
    "nestjs-otel": "^7.0.1",
    "nestjs-pino": "^4.4.0",
    "pg": "^8.16.3",
    "pino-http": "^10.5.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@types/body-parser": "^1.19.6",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "dbmate": "^2.28.0",
    "lefthook": "^1.12.3",
    "pino-pretty": "^13.1.1",
    "release-it": "^19.0.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
